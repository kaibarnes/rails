<div class="container mb-3">
  <p class='my-0'><strong><%= comment.user.username %> said: </strong><%= comment.body %></p>

  <%= link_to 'Edit Comment', edit_post_comment_path(comment.post, comment)%>

  <%= link_to 'Delete', [comment.post, comment], method: :delete, data: {confirm: "Are you sure? This can't be undone."}, class: 'ml-4'%>
  
</div>
