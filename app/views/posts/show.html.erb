<div class="mt-5">
<div class="bg-white rounded box-shadow container my-3 py-2">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>

  <div>
    <p><strong>Comments:</strong></p>
    <%= render @post.comments %>
  </div>
</div>

  <%= render 'comments/form' %>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
